{
  "name": "deny-public-ip",
  "properties": {
    "displayName": "Deny public IP creation",
    "policyType": "Custom",
    "mode": "All",
    "description": "Prevents creation of public IP addresses unless explicitly audited for dev scenarios.",
    "metadata": {
      "category": "Network"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Network/publicIPAddresses"
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
