{
  "name": "storage-secure-transfer",
  "properties": {
    "displayName": "Require secure transfer for storage",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Ensures secure transfer is required for storage accounts.",
    "metadata": {
      "category": "Storage"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "Microsoft.Storage/storageAccounts/supportsHttpsTrafficOnly",
            "equals": "false"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
